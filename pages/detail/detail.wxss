.detail-post {
  background-color: #eee;
}
.detail-post-header {
  background-color: #fff;
  line-height: 40px;
  padding: 15px 17px;
  position: relative;
  overflow: hidden;
  border-bottom: 1px #ccc solid;
}
.detail-post-title {
  margin: 0;
  padding: 0;
  font-weight: 400;
  font-size: 29px;
  color: #80bd01;
}
.detail-post-meta {
  position: relative;
  padding: 13px 18px 0 18px;
  background: #fff;
}
.detail-post-avatar, .detail-post-comment-avatar {
  width: 35%;
  height: 115px;
  display: block;
  float: left;
  margin-top: 3px;
}
.detail-post-avatar-img, .detail-post-comment-avatar-img {
  width: 100%;
  height: 100%;
}
.detail-post-info, .detail-post-comment-info, .detail-comment-content {
  margin: 0 0 0 50px;
  padding: 0 0 0 5px;
  position: relative;
  line-height: 20px;
  overflow: hidden;
}
.detail-post-author-name, .detail-post-comment-author-name {
  color: #6c6c6c;
  font-size: 15px;
  line-height:25px;
  margin-top: 3px;
}
.detail-post-time, .detail-post-comment-time {
  line-height: 20px;
  font-size: 12px;
  color: #a4a4a4;
}
.detail-post-content {
  background-color: #fff;
  padding: 13px 18px 25px 18px;
  font-family: Helvetica Neue,Helvetica,Hiragino Sans GB,Microsoft YaHei,Arial,sans-serif;
  margin-bottom: 13px;
}
.content-info {
  font-size: 12px;
  line-height: 20px;
  word-wrap: break-word;
  padding: 0;
}
.detail-post-comment {
  background-color: #fff;
}
.detail-post-comment-title {
  font-size: 20px;
  line-height: 50px;
  padding: 0 10px;
  color: #666;
  position: relative;
  border-bottom: 1px #ccc solid;
}
.detail-post-comment-item {
  padding: 5px 10px;
  background: #fff;
  border-bottom: 1px #ccc solid;
}
.detail-comment-text {
  margin: 10px 0;
  font-size: 15px;
}