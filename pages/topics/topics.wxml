<!--posts.wxml-->
<view class="topics-main">
  <view class="top-bar">
    <view class="top-bar-item" id="all" catchtap="onTapTag">
      <view class="tab">热菜</view>
    </view>
    <view class="top-bar-item" id="good" catchtap="onTapTag" >
      <view >冷菜</view>
    </view>
    <view class="top-bar-item" id="good" catchtap="onTapTag" >
      <view >饮料</view>
    </view>
  </view>
  <scroll-view class="posts-list" style="height:100%" scroll-y="true" bindscrolltolower="lower">
    <block wx:for="{{postsList}}">
      <view class="posts-item" index="{{index}}" >
        <view class="author">
          <image class="author-avatar" src="{{item.img_src}}"></image>
          <view class="movie-detail">
            <view class="author-name">{{item.title}}</view>
            <view class="posts-last-reply">{{item.score}}分</view>
          </view>
          <view class="movie-detail">
            <view class="author-name" style="width:100%;">主材:{{item.movie_genre}}</view>
            <view class="author-name" style="width:100%;">辅料:{{item.duration}}分钟</view>
          </view>
          <view class="movie-detail">
            <view class="author-name" catchtap="showDetail" id="{{item.id}}">点击详情</view>
            <view class="posts-last-reply" catchtap="redictDetail" id="{{item.title}}">加入菜单</view>
          </view>
        </view>
      </view>
    </block>
  </scroll-view>
  <loading hidden="{{hidden}}">
    加载中...
  </loading>
</view>